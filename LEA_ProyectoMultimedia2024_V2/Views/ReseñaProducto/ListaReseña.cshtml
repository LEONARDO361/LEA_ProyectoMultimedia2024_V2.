@model IEnumerable<LEA_ProyectoMultimedia2024_V2_.Models.Tables.ReseñaProducto>

@{
    ViewData["Title"] = "Index";
}

<h1>Reseñas </h1>

<p>
    <a asp-action="PVCreate" id="BotonC" class="btn btn-success d-grid gap-2 d-grid">Añadir reseñas </a>
</p>
<table class="table" id="TablaReseña">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Calificación)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Comentario)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FechaReseña)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Cliente)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Cliente.Apellido)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Producto)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Calificación)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Comentario)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FechaReseña)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Cliente.Nombre)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Cliente.Apellido)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Producto.Nombre)
                </td>
                <td>
                    <div class="btn-group" role="group" aria-label="Basic example">
                        <button class="btn btn-sm btn-info me-2" onclick="EditReseñas(@item.ReseñaId)">Editar</button>
                        <button class="btn btn-sm btn-primary me-2" onclick="DetailsReseñas(@item.ReseñaId)">Detalles</button>
                        <button type="button" class="btn btn-danger text-end" data-bs-toggle="modal" data-bs-target="#deleteModal" onclick="setDeleteUrl(@item.ReseñaId)">Eliminar</button>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>



@section scripts
{
    <script>
        $(document).ready(function () {
            $('#TablaReseña').DataTable({
                "language": {
                    "url": "//cdn.datatables.net/plug-ins/1.11.5/i18n/es-ES.json"
                }
            });

        });
    </script>
}

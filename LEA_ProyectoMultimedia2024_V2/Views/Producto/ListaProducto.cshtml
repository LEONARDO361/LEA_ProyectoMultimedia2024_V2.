@model IEnumerable<LEA_ProyectoMultimedia2024_V2_.Models.Tables.Producto>

@{
    ViewData["Title"] = "Index";
}

<h1>Producto</h1>

<p>
    <button asp-action="PVCreate" id="BotonC" class="btn btn-success d-grid gap-2 d-grid">Crear producto</button>
</p>
<table class="table" id="TablaProducto">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nombre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Descripcion)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Precio)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Cantidad)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Procedencia)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Estado)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Marca)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Categoria)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Categoria.Pesokg)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Descuento.PorcentajeDescuento)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Descuento.FechaFin)
            </th>

            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Nombre)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Descripcion)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Precio)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Cantidad)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Procedencia)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Estado)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Marca)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Categoria.Nombre)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Categoria.Pesokg)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Descuento.PorcentajeDescuento)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Descuento.FechaFin)
                </td>
                <td>
                    <div class="btn-group" role="group" aria-label="Basic example">
                        <button class="btn btn-sm btn-info me-2" onclick="EditProductos(@item.ProductoId)">Editar</button>
                        <button class="btn btn-sm btn-primary me-2" onclick="DetailsProductos(@item.ProductoId)">Detalles</button>
                        <button type="button" class="btn btn-danger text-end" data-bs-toggle="modal" data-bs-target="#deleteModal" onclick="setDeleteUrl(@item.ProductoId)">Eliminar</button>
                    </div>


                </td>
            </tr>
        }
    </tbody>
</table>

@section scripts
{
    <script>
        $(document).ready(function () {
            $('#TablaProducto').DataTable({
                "language": {
                    "url": "//cdn.datatables.net/plug-ins/1.11.5/i18n/es-ES.json"
                }
            });

        });
    </script>
}
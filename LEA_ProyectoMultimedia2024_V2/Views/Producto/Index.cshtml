@model IEnumerable<LEA_ProyectoMultimedia2024_V2_.Models.Tables.Producto>

@{
    ViewData["Title"] = "Index";
}

<h1>Producto</h1>

<p>
    <a asp-action="Create" class="btn btn-success d-grid gap-2 d-grid">Crear producto</a>
</p>
<table class="table" id="Tabla">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nombre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Descripcion)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Precio)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Cantidad)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Procedencia)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Estado)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Marca)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Categoria)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Categoria.Pesokg)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Descuento.PorcentajeDescuento)
            </th>
                        <th>
                @Html.DisplayNameFor(model => model.Descuento.FechaFin)
            </th>

            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Descripcion)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Precio)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Cantidad)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Procedencia)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Estado)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Marca)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Categoria.Nombre)
            </td>
             <td>
                    @Html.DisplayFor(modelItem => item.Categoria.Pesokg)
             </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Descuento.PorcentajeDescuento)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Descuento.FechaFin)
                </td>
            <td>
                    <div class="btn-group" role="group" aria-label="Basic example" >
                        <a asp-action="Edit" class="btn btn-primary" asp-route-id="@item.ProductoId">Editar</a> 
                        <a asp-action="Details" class="btn btn-warning" asp-route-id="@item.ProductoId">Detalles</a> 
                        <a asp-action="Delete" class="btn btn-danger" asp-route-id="@item.ProductoId">Eliminar</a>
                </div>


            </td>
        </tr>
}
    </tbody>
</table>

@section scripts
{
    <script>
        $(document).ready(function () {
            $('#Tabla').DataTable({
                "language": {
                    "url": "//cdn.datatables.net/plug-ins/1.11.5/i18n/es-ES.json"
                }
            });

        });
    </script>
}
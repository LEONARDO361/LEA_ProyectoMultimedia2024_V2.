<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - LEA_ProyectoMultimedia2024</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <style>
        /* Colores base */
        body {
            background-color: #282424; /* Fondo gris oscuro */
            color: #ffffff;
            font-family: Arial, sans-serif;
        }

        .navbar {
            background-color: #0b0b0b !important; /* Barra de navegación negra */
        }

        .navbar-brand, .nav-link {
            color: #ffffff !important;
        }

            .nav-link:hover {
                color: #dddddd !important;
            }

        .footer {
            background-color: #0b0b0b; /* Pie de página negro */
            color: #ffffff;
            padding: 20px 0;
            text-align: center;
        }

        /* Botón de logout */
        .btn-logout {
            border: 1px solid #ffffff;
            color: #ffffff;
        }

            .btn-logout:hover {
                background-color: #dddddd;
                color: #0b0b0b;
            }
    </style>
</head>
<body>
    <!-- Encabezado -->
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">ChadStore</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">Inicio</a>
                        </li>
                        @if (User.IsInRole("Admin"))
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-controller="Mantenedores" asp-action="Index">Mantenedores</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-controller="Facturas" asp-action="Index">Factura</a>
                            </li>
                        }
                        @if (User.IsInRole("Vendedor"))
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-controller="Facturas" asp-action="Index">Factura</a>
                            </li>
                        }
                        @if (User.IsInRole("Mantenedor"))
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-controller="Mantenedores" asp-action="Index">Mantenedores</a>
                            </li>
                        }
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="About_Us">About Us</a>
                        </li>
                        @if (User.Identity.IsAuthenticated && (User.IsInRole("Comprador") || User.IsInRole("Admin")))
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-controller="Producto" asp-action="CatalogoProductos">Catálogo</a>
                            </li>
                        }
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Canastas" asp-action="Index">Canasta</a>
                        </li>
                    </ul>
                    <ul class="navbar-nav ms-auto">
                        @if (User.Identity.IsAuthenticated)
                        {
                            <li class="nav-item">
                                <span class="navbar-text me-3">Bienvenido, @User.Identity.Name</span>
                            </li>
                            <li class="nav-item">
                                <form method="post" action="/Home/Logout" class="d-inline">
                                    @Html.AntiForgeryToken()
                                    <button type="submit" class="btn btn-logout btn-sm">Cerrar Sesión</button>
                                </form>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <!-- Contenido principal -->
    <div class="container mt-4">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <!-- Pie de página -->
    <footer class="footer mt-4">
        <div class="container">
            <p>© 2024 ChadStore - Todos los derechos reservados.</p>
            <p>Contacto: soporte@chadstore.com</p>
        </div>
    </footer>

    <!-- Scripts -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
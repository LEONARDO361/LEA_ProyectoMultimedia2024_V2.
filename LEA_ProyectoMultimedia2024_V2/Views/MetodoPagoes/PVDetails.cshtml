@model LEA_ProyectoMultimedia2024_V2_.Models.Tables.MetodoPago

@{
    ViewData["Title"] = "Edit";
}

<h1>Detalles del metodo de pago</h1>


<hr />

    <div class="row">
        <div class="col-4">
            <div class="form-group">
                <label asp-for="Cliente" class="control-label"></label>
            <select asp-for="ClienteId" class="form-control  form-select" asp-items="ViewBag.ClienteId" disabled></select>
                <span asp-validation-for="ClienteId" class="text-danger"></span>
            </div>
        </div>
        <div class="col-4">
            <div class="form-group">
                <label asp-for="TipoTarjeta" class="control-label"></label>
            <input asp-for="TipoTarjeta" class="form-control" disabled />
                <span asp-validation-for="TipoTarjeta" class="text-danger"></span>
            </div>
        </div>
        <div class="col-4">
            <div class="form-group">
                <label asp-for="NumeroTarjeta" class="control-label"></label>
            <input asp-for="NumeroTarjeta" class="form-control" disabled />
                <span asp-validation-for="NumeroTarjeta" class="text-danger"></span>
            </div>
        </div>
        <div class="col-4">
            <div class="form-group">
                <label asp-for="FechaExpiracion" class="control-label"></label>
            <input asp-for="FechaExpiracion" class="form-control" disabled />
                <span asp-validation-for="FechaExpiracion" class="text-danger"></span>
            </div>
        </div>
        <div class="col-4">
            <div class="form-group">
                <label asp-for="Cvv" class="control-label"></label>
            <input asp-for="Cvv" class="form-control" disabled />
                <span asp-validation-for="Cvv" class="text-danger"></span>
            </div>
        </div>

    </div>
    <div class="row">
        <div class="col-12 text-end">
            <input type="submit" value="Guardar" class="btn btn-primary" />
        <a asp-action="Index" asp-controller="Mantenedores" class="btn btn-info">Volver</a>
        </div>
    </div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

@model IEnumerable<LEA_ProyectoMultimedia2024_V2_.Models.Tables.DireccionEnvio>

@{
    ViewData["Title"] = "Index";
}

<h1>Direccion de envios</h1>

<p>
    <a asp-action="Create" class="btn btn-success d-grid gap-2 d-grid">Crear envio</a>
</p>
<table class="table" id="Tabla">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Dirección)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Ciudad)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Provincia)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CodigoPostal)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Pais)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Cliente)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Dirección)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Ciudad)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Provincia)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CodigoPostal)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Pais)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Cliente.Nombre)
            </td>
            <td>
                    <div class="btn-group" role="group" aria-label="Basic example">
                        <a asp-action="Edit" class="btn btn-primary" asp-route-id="@item.DireccionId">Editar</a> 
                        <a asp-action="Details" class="btn btn-warning" asp-route-id="@item.DireccionId">Detalles</a> 
                        <a asp-action="Delete" class="btn btn-danger" asp-route-id="@item.DireccionId">Eliminar</a>
                </div>

            </td>
        </tr>
}
    </tbody>
</table>
@section scripts
{
    <script>
        $(document).ready(function () {
            new DataTable('#Tabla');
        });
    </script>
}

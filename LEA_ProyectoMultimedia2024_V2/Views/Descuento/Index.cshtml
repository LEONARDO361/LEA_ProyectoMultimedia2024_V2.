@model IEnumerable<LEA_ProyectoMultimedia2024_V2_.Models.Tables.Descuento>

@{
    ViewData["Title"] = "Index";
}

<h1>Productos en Descuentos</h1>

<p>
    <a asp-action="Create" class="btn btn-success">Crear un Descuento en producto</a>
</p>
<table class="table" id="Tabla">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.PorcentajeDescuento)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FechaInicio)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FechaFin)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TipoDescuento)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.PorcentajeDescuento)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FechaInicio)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FechaFin)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TipoDescuento)
            </td>
            <td>
                    <a asp-action="Edit" class="btn btn-primary btn-sm" asp-route-id="@item.DescuentoId">Editar</a> |
                    <a asp-action="Details" class="btn btn-warning" asp-route-id="@item.DescuentoId">Detalles</a> |
                    <a asp-action="Delete" class="btn btn-danger" asp-route-id="@item.DescuentoId">Eliminar</a>
            </td>
        </tr>
}
    </tbody>
</table>

                @section scripts
{
    <script>
        $(document).ready(function () {
            new DataTable('#Tabla');
        });
    </script>
}

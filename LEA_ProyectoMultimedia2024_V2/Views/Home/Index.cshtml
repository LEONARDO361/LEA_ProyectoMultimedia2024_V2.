<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Tienda</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <style>
        body {
            background-color: #282424; /* Fondo gris oscuro */
            color: #ffffff;
        }

        header {
            background-color: #0b0b0b;
            padding: 20px 0;
            text-align: center;
        }

            header h1 {
                margin: 0;
                color: #ffffff;
            }

        .card {
            background-color: #0b0b0b;
            color: #ffffff;
            border: none;
            border-radius: 10px;
            overflow: hidden;
            transition: transform 0.3s ease-in-out;
        }

            .card img {
                height: 200px;
                object-fit: cover;
            }

            .card:hover {
                transform: scale(1.05);
            }

        .btn-add {
            background-color: #ffffff;
            color: #0b0b0b;
            font-weight: bold;
            border: none;
        }

            .btn-add:hover {
                background-color: #dddddd;
                color: #0b0b0b;
            }

        footer {
            background-color: #0b0b0b;
            color: #ffffff;
            text-align: center;
            padding: 20px 0;
        }
    </style>
</head>
<body>

    <!-- Encabezado -->
    <header class="w-100">
        <h1>Productos Destacados</h1>
    </header>

    <!-- Banner Principal -->
    <section class="container-fluid p-0">
        <div class="row">
            <div class="col-12">
                <img src="https://via.placeholder.com/1920x400" class="img-fluid w-100" alt="Banner Principal">
            </div>
        </div>
    </section>

    <!-- Productos Destacados -->
    <section class="container-fluid mt-5">
        <div class="row gx-4 gy-4 justify-content-center">
            <!-- Producto 1 -->
            <div class="col-lg-3 col-md-4 col-sm-6">
                <div class="card text-center">
                    <img src="https://via.placeholder.com/300" alt="Pesa 1.5KG">
                    <div class="card-body">
                        <h5 class="card-title">Pesa individual 1.5KG</h5>
                        <p class="fw-bold">$10.990</p>
                        <button class="btn btn-add w-100">Añadir al carrito</button>
                    </div>
                </div>
            </div>

            <!-- Producto 2 -->
            <div class="col-lg-3 col-md-4 col-sm-6">
                <div class="card text-center">
                    <img src="https://via.placeholder.com/300" alt="Mancuernas Hexagonales">
                    <div class="card-body">
                        <h5 class="card-title">Mancuernas Hexagonales</h5>
                        <p class="fw-bold">$13.980</p>
                        <button class="btn btn-add w-100">Añadir al carrito</button>
                    </div>
                </div>
            </div>

            <!-- Producto 3 -->
            <div class="col-lg-3 col-md-4 col-sm-6">
                <div class="card text-center">
                    <img src="https://via.placeholder.com/300" alt="Discos Olímpicos">
                    <div class="card-body">
                        <h5 class="card-title">Discos Olímpicos</h5>
                        <p class="fw-bold">$7.990</p>
                        <button class="btn btn-add w-100">Añadir al carrito</button>
                    </div>
                </div>
            </div>

            <!-- Producto 4 -->
            <div class="col-lg-3 col-md-4 col-sm-6">
                <div class="card text-center">
                    <img src="https://via.placeholder.com/300" alt="Pack Barra Olímpica">
                    <div class="card-body">
                        <h5 class="card-title">Pack Barra Olímpica</h5>
                        <p class="fw-bold">$159.990</p>
                        <button class="btn btn-add w-100">Añadir al carrito</button>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Sección de Ofertas -->
    <section class="container-fluid mt-5">
        <h2 class="text-center mb-4">Ofertas</h2>
        <div class="row gx-4 gy-4 justify-content-center">
            <!-- Oferta 1 -->
            <div class="col-lg-3 col-md-4 col-sm-6">
                <div class="card text-center">
                    <img src="https://via.placeholder.com/300" alt="Oferta 1">
                    <div class="card-body">
                        <h5 class="card-title">Roller Training</h5>
                        <p class="fw-bold text-danger">$7.990</p>
                    </div>
                </div>
            </div>

            <!-- Oferta 2 -->
            <div class="col-lg-3 col-md-4 col-sm-6">
                <div class="card text-center">
                    <img src="https://via.placeholder.com/300" alt="Oferta 2">
                    <div class="card-body">
                        <h5 class="card-title">Trotadora Xterra</h5>
                        <p class="fw-bold text-danger">$309.990</p>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Footer -->
    <footer class="w-100 mt-5">
        <div class="container-fluid">
            <p class="mb-0">&copy; 2024 ChadStore. Todos los derechos reservados.</p>
        </div>
    </footer>

    <!-- Scripts -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>

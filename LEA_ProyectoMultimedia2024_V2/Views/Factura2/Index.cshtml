@model List<LEA_ProyectoMultimedia2024_V2_.Models.Tables.Orden>

<div class="container mt-4">
    <h1>Facturas</h1>

    @if (!string.IsNullOrEmpty(ViewBag.Mensaje))
    {
        <div class="alert alert-info">
            @ViewBag.Mensaje
        </div>
    }

    <table class="table table-bordered mt-4">
        <thead class="table-dark">
            <tr>
                <th># Factura</th>
                <th>Fecha</th>
                <th>Cliente</th>
                <th>Total</th>
                <th>Estado</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var orden in Model)
            {
                <tr>
                    <td>@orden.OrdenId</td>
                    <td>@orden.FechaOrden.ToShortDateString()</td>
                    <td>@orden.Cliente.Nombre</td>
                    <td>$@orden.Total</td>
                    <td>@orden.Estado</td>
                    <td>
                        <a href="@Url.Action("Details", "Facturas", new { id = orden.OrdenId })" class="btn btn-outline-info btn-sm">
                            Ver Detalles
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
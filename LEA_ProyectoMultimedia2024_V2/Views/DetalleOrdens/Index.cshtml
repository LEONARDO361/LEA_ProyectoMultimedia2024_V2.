@model IEnumerable<LEA_ProyectoMultimedia2024_V2_.Models.Tables.DetalleOrden>

@{
    ViewData["Title"] = "Index";
}

<h1>Detalle de orden</h1>

<p>
    <a asp-action="Create" class="btn btn-success d-grid gap-2 d-grid">Crear el detalle de una orden</a>
</p>
<table class="table" id="Tabla">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Cantidad)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PrecioTotal)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Orden)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Producto)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Cantidad)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PrecioTotal)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Orden.OrdenId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Producto.ProductoId)
            </td>
                <td>
                    <div class="btn-group" role="group" aria-label="Basic example">
                        <a asp-action="Edit" class="btn btn-primary" asp-route-id="@item.DetalleId">Editar</a> 
                        <a asp-action="Details" class="btn btn-warning" asp-route-id="@item.DetalleId">Detalles</a> 
                        <a asp-action="Delete" class="btn btn-danger" asp-route-id="@item.DetalleId">Eliminar</a>
            </div>

            </td>
        </tr>
}
    </tbody>
</table>


@section scripts
{
    <script>
        $(document).ready(function () {
            $('#Tabla').DataTable({
                "language": {
                    "url": "//cdn.datatables.net/plug-ins/1.11.5/i18n/es-ES.json"
                }
            });

        });
    </script>
}
